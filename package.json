{
  "name": "random-student-picker",
  "version": "0.0.1",
  "private": true,
  "description": "Randomly chooses a student's name",
  "main": "index.js",
  "scripts": {
    "start": "browser-sync start --server --files '**/*.html, **/*.css, **/**.js'"
  },
  "keywords": [
    "html-css-js",
    "student"
  ],
  "author": "Joshua Peterson",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.css": "stylelint --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
